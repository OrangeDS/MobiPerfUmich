

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="500dip"
    
    android:padding="6dip">
    
    <ImageView
        android:id="@+id/icon"
        
        android:layout_width="60dip"
        android:layout_height="80dip"
        android:layout_marginRight="6dip"
        
        android:src="@drawable/icon" />

    <LinearLayout
        android:orientation="vertical"
    
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="1000dip">
            
             <TextView  
             android:id="@+id/about2"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
             android:textSize = "20px"
             android:maxLines = "15"
            android:scrollbars="vertical" 
             android:singleLine="false"
             android:textColor="@android:color/secondary_text_dark_nodisable"
            android:text="Dear MobiPerf users:\nWe endeavour to improve open internet enviroment and help you understand the network information.
Now we need your help!
Please vote for us for FCC open internet app challenge "           /> 
            
            <TextView
		    	android:id="@+id/link1_view"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
   		        android:autoLink="web"
   		        android:textSize = "18px"
		        android:text="http://goo.gl/o1yA3"/>
    </LinearLayout>
    
      
            

</LinearLayout>