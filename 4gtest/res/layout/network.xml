<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="500dip"
    
    android:padding="6dip">
    
    <ImageView
        android:id="@+id/temp"
        
        android:layout_width="60dip"
        android:layout_height="80dip"
        android:layout_marginRight="6dip"
        
        android:src="@drawable/icon" />

    <LinearLayout
        android:orientation="vertical"
    
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="1000dip">

        <TextView
        	android:id="@+id/network_text1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:textSize = "25px"
            android:gravity="center_vertical"
            android:text="Network Toggle" />
            
            <TextView  
			android:background = "@drawable/whiteline"
			android:layout_width="fill_parent"
			 android:layout_height="2dip"
            />
             <TextView  
             android:id="@+id/network_text2"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
             android:textSize = "20px"
             android:maxLines = "15"
            android:scrollbars="vertical" 
             android:singleLine="false"
             android:textColor="@android:color/secondary_text_dark_nodisable"
            android:text="WRITE SOME STUFF" 
            /> 
            <Button android:id="@+id/network_btn"
			android:layout_width="150px" 
			android:layout_height="wrap_content"
			android:textSize="17px"
			android:gravity = "center" android:text="Okay" />
    </LinearLayout>
</LinearLayout>